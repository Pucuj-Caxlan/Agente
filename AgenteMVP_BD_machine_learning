async def run_complete_ml_demo():
â€œâ€â€œDemostraciÃ³n completa del sistema de MLâ€â€â€

```
# ConfiguraciÃ³n
db_config = {
    'host': 'localhost',
    'database': 'ai_agents_db',
    'user': 'postgres',
    'password': 'tu_password'
}

# Setup inicial
print("ğŸš€ Iniciando demostraciÃ³n completa del sistema ML...")

if not setup_database(db_config):
    print("âŒ Error en setup de base de datos")
    return

# Inicializa sistemas
from database_manager import DatabaseManager  # Asume que tienes la clase

db_manager = DatabaseManager(db_config)
db_manager.connect()

ml_system = AgentMLSystem(db_manager)
tuning_system = AutoTuningSystem(db_manager, ml_system)

# Entrena modelos iniciales
print("\n1ï¸âƒ£ Entrenando modelos de ML...")
training_results = ml_system.run_automated_training()
print(f"ğŸ“Š Resultados de entrenamiento: {training_results}")

# Ejecuta optimizaciÃ³n del sistema
print("\n2ï¸âƒ£ Ejecutando optimizaciÃ³n automÃ¡tica...")
optimization_results = tuning_system.run_system_optimization()
print(f"ğŸ”§ Resultados de optimizaciÃ³n: {optimization_results}")

# Genera dashboard de monitoreo
print("\n3ï¸âƒ£ Generando datos de monitoreo...")
dashboard_data = create_monitoring_dashboard_data(db_manager)
print(f"ğŸ“Š Dashboard data: {json.dumps(dashboard_data, indent=2, default=str)}")

# Prueba predicciÃ³n
print("\n4ï¸âƒ£ Probando predicciÃ³n de tareas...")
sample_task_features = {
    'task_length': 50,
    'priority': 2,
    'agent_count': 1,
    'collaboration_type_solo': 1,
    'collaboration_type_parallel': 0,
    'collaboration_type_sequential': 0,
    'estimated_duration': 45,
    'task_complexity': 0.7,
    'hour_of_day': 14,
    'day_of_week': 2,
    'is_weekend': 0
}

prediction = ml_system.predict_task_outcome('demo_analyst', sample_task_features)
print(f"ğŸ”® PredicciÃ³n: {prediction}")

print("\nâœ… DemostraciÃ³n completa del sistema ML finalizada exitosamente!")
```

if **name** == â€œ**main**â€:
import asyncio
asyncio.run(run_complete_ml_demo())